pipeline {


  agent any

  stages {

    stage('Checkout code') {
        steps {
            checkout scm
        }
    }

    stage('Checking') {
      steps{
        script {
          sh " kubectl config get-contexts "

      }
      }
    }

    stage('Build Image') {
     
      steps{
        script {
          sh " docker build -t sample-project-al/sample-project1:one . "
        }
      }
    }

    stage('Deploying App to Kubernetes') {
      steps {
        script {
          kubernetesDeploy(configs: "deploymentservice.yml", kubeconfigId: "kubernetes")
        }
      }
    }

  }

}
