pipeline {


  agent any

  stages {

    stage('Checkout code') {
        steps {
            checkout scm
        }
    }

    stage('Checking') {
      steps{
        script {
          sh " kubectl config get-contexts "

      }
      }
    }

    stage('Build Image') {
     
      steps{
        script {
          sh " docker build -t registry.digitalocean.com/sample-project-al/sample-project1:one . "
        }
      }
    }

    stage('Push to Registry') {
      steps {
        script {
          sh " docker push registry.digitalocean.com/sample-project-al/sample-project:one "
        }
      }
    }
    stage('Depolyment') {
      steps {
        script {
          sh " kubectl set image deployment/nginx-deployment nginx=registry.digitalocean.com/sample-project-al/sample-project:one --namespace default" 
        }
      }
    }
  }

}
